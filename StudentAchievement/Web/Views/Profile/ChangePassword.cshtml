@model StudentAchievement.Models.ChangePasswordViewModel

@{
    this.ViewData["Title"] = "Смена пароля";
}

<div style="margin: 0 auto; width: 50%">
    <div class="card">
        <!--Ни в коем случае не изменять id-->
        <h5 class="card-header primary-color white-text text-center py-4">
            <br> Смена пароля
        </h5>

        <div class="card-body px-lg-5 pt-0">
            <br>
            <section>
                <form asp-action="ChangePassword" asp-controller="Profile">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group row">
                        <label asp-for="OldPassword" class="col-sm-4 col-form-label"></label>
                        <input asp-for="OldPassword" class="form-control" />
                    </div>
                    <div class="form-group row">
                        <label asp-for="NewPassword" class="col-sm-4 col-form-label"></label>
                        <input asp-for="NewPassword" class="form-control" />
                    </div>
                    <div class="form-group row">
                        <label asp-for="ConfirmPassword" class="col-sm-4 col-form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                        <a asp-action="Index" asp-controller="Profile" class="btn btn-primary">Отмена</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>