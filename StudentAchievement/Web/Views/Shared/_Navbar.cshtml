@inject UserManager<ApplicationUser> UserManager

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
  
        <!-- SideNav slide-out button -->
        <div class="float-left">
            <a href="#" data-activates="slide-out" class="button-collapse"><i class="fas fa-bars fa-1x" style="background : #343a40"></i></a>
        </div>
        <a href="@Url.Action("Index", "Home")"><img src="~/img/Logo.png" class="img-fluid flex-center" style="width:40%"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Breadcrumb-->
        <ul class="nav navbar-nav nav-flex-icons ml-auto">
          

            @if (User.IsInRole(UserRoles.Admin))
                {
            @await Html.PartialAsync("_AdminSideNavElements");
                }

            @if (User.IsInRole(UserRoles.Teacher))
                {
            @await Html.PartialAsync("_TeacherSideNavElements");
                }

            <li class="nav-item">
                <a asp-action="Index" asp-controller="Profile" class="nav-link"><i class="fas fa-user"></i> <span class="clearfix d-none d-sm-inline-block">@(this.User.FindFirst("UserFullName").Value)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="" data-toggle="modal" data-target="#logoutModal">
                    Выйти <i class="fas fa-sign-out-alt"></i>
                </a>
            </li>
        </ul>
   
</nav>
<!-- /.Navbar -->